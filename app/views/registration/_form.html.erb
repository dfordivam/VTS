	    <input type="hidden" id="valid_users_check" name="valid_users_check" value="<%=h @validate_users %>" />
	    <% if @participants && @participants.length > 0 -%>
	        <ul id="students_list" class="list">
	            <% for participant in @participants -%>
	                <li>
	                    <%= check_box_tag "registration[participant_ids][]", participant.id, @registration.participants.include?(participant) %>
	                    <span><%= h(participant.first_name) %> <%= h(participant.middle_name) %> <%= h(participant.last_name) %></span>
	                </li>
	            <% end -%>
	        </ul>
	    <% else -%>
